@model IEnumerable<Application.ViewModels.PessoaViewModel>
@{
    ViewData["Title"] = "Pessoa Page";
}


@if (@ViewData["mensagem"] != null)
{
    <br/>
    <div class="col-md-12 alert alert-success">
        @ViewData["Mensagem"].ToString()
    </div>
}

<section class="container">
    <div class="col-md-12">
        <br/>
        <a asp-controller="Pessoa" asp-action="Registrar" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Novo</a>
    </div>
    <div class="col-md-12">
        <table class="table table-hover table-striped table-responsive">
            <thead>
            <tr>
                <td class="col-md-1"></td>
                <td>Id</td>
                <td>Nome</td>
            </tr>
            </thead>
            @foreach (var pessoa in Model)
            {
                <tr>
                    <td class="col-md-1 text-center">
                        <a asp-controller="Pessoa" asp-action="Editar" asp-route-id="@pessoa.Id"><i class="glyphicon glyphicon-pencil"></i></a>&nbsp;
                        <a asp-controller="Pessoa" asp-action="Excluir" asp-route-id="@pessoa.Id"><i class="glyphicon glyphicon-remove text-danger"></i></a>
                    </td>
                    <td>@pessoa.Id</td>
                    <td>@pessoa.Nome</td>

                </tr>
            }
        </table>

    </div>
</section>