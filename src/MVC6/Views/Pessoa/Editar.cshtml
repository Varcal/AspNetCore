@model Application.ViewModels.PessoaViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


@if (@ViewData["Erro"] != null)
{
    <br />
    <div class="col-md-12 alert alert-danger">
        @ViewData["Erro"].ToString()
    </div>
}

<h2>Edição de Pessoa</h2>

<div class="container">
    <div class="col-md-12">
        <form asp-controller="Pessoa" asp-action="Editar" method="post" class="form-horizontal">
            <input asp-for="Id" type="hidden"/>
            <div class="form-group">
                <div class="col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label asp-for="Ativo" class="control-label"></label>
                    <input asp-for="Ativo" class="checkbox-inline"/>
                </div>
            </div>
            <div class="col-md-12">
                <input class="btn btn-success" type="submit" value="Salvar"/>
                <a class="btn btn-default" asp-controller="Pessoa" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
